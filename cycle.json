{
    "version": "1.0",
    "containers": {
      "healthcheck": {
        "name": "healthcheck",
        "image": {
          "name": "healthcheck",
          "origin": {
            "type": "docker-file",
            "details": {
              "context_dir": "/",
              "build_file": "/Dockerfile"
            }
          }
        },
        "config": {
          "network": {
            "public": "enable",
            "hostname": "healthcheck",
            "ports": ["80:80"]
          },
          "deploy": {
            "instances": 1,
            "constraints": {
                "node": {
                    "tags": {
                        "all": ["gcp"]
                    }
                }
            },
            "health_check": {
                "command": "./health_check.sh",
                "retries": 3,
                "interval": "10s",
                "timeout": "30s",
                "restart": true,
                "delay": "10s"
            }
          }
        }
      }
    }
      
  }
